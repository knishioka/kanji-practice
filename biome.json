{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "noChildrenProp": "error",
        "noVoidElementsWithChildren": "error"
      },
      "style": {
        "useConst": "warn"
      },
      "suspicious": {
        "noDoubleEquals": "warn",
        "noDuplicateJsxProps": "error",
        "noVar": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.tsx", "e2e/**/*.ts", "*.json", "*.md", "*.ts"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  }
}
